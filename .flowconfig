[options]
# $ExpectError must not be followed by anything to make it easier to copy code
# to TypeScript files.
suppress_comment= \\(.\\|\n\\)*\\$\\(FlowIgnore\\|ExpectError$\\)
include_warnings=true
exact_by_default=true

[lints]
all=error

[strict]
implicit-inexact-object
sketchy-null
sketchy-number
untyped-type-import
untyped-import
unclear-type
unsafe-getters-setters
nonstrict-import
unnecessary-optional-chain
unnecessary-invariant

[ignore]
<PROJECT_ROOT>/\..*
<PROJECT_ROOT>/dist/.*
<PROJECT_ROOT>/node_modules/.*
