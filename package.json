{
  "name": "tiny-decoders",
  "version": "1.0.0",
  "license": "MIT",
  "author": "Simon Lydell",
  "repository": "lydell/tiny-decoders",
  "description": "Type-safe data validation for the minimalist.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "keywords": [
    "decode",
    "decoders",
    "elm",
    "flow",
    "json",
    "typescript"
  ],
  "scripts": {
    "flow": "flow",
    "eslint": "eslint .",
    "eslint:fix": "npm run eslint -- --fix",
    "dtslint": "dtslint typescript --onlyTestTsNext",
    "prettier": "prettier --write \"*.md\" \"typescript/*.{ts,json}\"",
    "jest": "jest",
    "coverage": "jest --coverage",
    "clean": "rimraf dist",
    "postclean": "node -e \"try { require('fs').mkdirSync('dist') } catch {}\"",
    "prebuild": "npm run clean",
    "build": "run-p \"build:*\"",
    "build:commonjs": "babel src/index.js --out-file dist/index.js",
    "build:esm": "babel --env-name esm src/index.js --out-file dist/index.mjs",
    "build:flow": "node -e \"require('fs').copyFileSync('src/index.js', 'dist/index.js.flow')\"",
    "build:typescript": "node -e \"require('fs').copyFileSync('typescript/index.d.ts', 'dist/index.d.ts')\"",
    "test": "run-s eslint dtslint coverage build",
    "prepublishOnly": "npm test"
  },
  "devDependencies": {
    "@babel/cli": "7.1.5",
    "@babel/core": "7.1.5",
    "@babel/preset-env": "7.1.5",
    "@babel/preset-flow": "7.0.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "10.0.1",
    "babel-jest": "23.6.0",
    "dtslint": "0.3.0",
    "eslint": "5.9.0",
    "eslint-config-lydell": "11.0.0",
    "eslint-plugin-flowtype": "3.2.0",
    "eslint-plugin-flowtype-errors": "3.6.0",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-jest": "22.0.0",
    "eslint-plugin-prettier": "3.0.0",
    "eslint-plugin-sort-imports-es6-autofix": "0.3.0",
    "flow-bin": "0.86.0",
    "jest": "23.6.0",
    "npm-run-all": "4.1.3",
    "prettier": "1.15.2",
    "rimraf": "2.6.2"
  }
}
